t = 0:0.001:3.2;
td = 0.001:0.001:d/1000;
dt = 0.001;
a = 1000;
d = 1000;
s = 0.5;
r = 1000;

env = ones(1, 3201);

for i = 1:length(t)
    if i <= a+1
        env(i) = 1/a * t(i) * 1000;
    elseif i <= a + d + 1
        env(i) = 1 - td(i-a) * ((
    elseif i <= a + d + 201
        env(i) = env(a+d+1);
    else
        env(i) = env(a+d + 201);
    end
end

figure(1)
plot(t, env)
ylim([0 1.2])
xlim([0 3.2])